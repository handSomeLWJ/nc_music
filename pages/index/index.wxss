/* banner */

.swiperContainer {}

.swiperContainer .swiperItem {
    width: 100%;
}

.swiperContainer .swiperItem image {
    width: 100%;
}


/* 导航 */

.nav {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-around;
}

.nav .navItem {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
}

.nav .navItem .navIcon {
    width: 100rpx;
    height: 100rpx;
    background-color: #EE1111;
    text-align: center;
    line-height: 100rpx;
    border-radius: 50%;
    color: #fff;
    font-size: 40rpx;
}

.nav .navItem .text {
    margin-top: 10rpx;
    font-size: 26rpx;
}


/* 推荐歌曲 */

.recommend {
    padding: 0 20rpx;
}

.recommend .scrollContainer {
    margin-top: 20rpx;
    height: 300rpx;
    display: flex;
    justify-content: space-between;
}

.recommend .scrollContainer .scrollItem {
    margin-right: 20rpx;
}

.recommend .scrollContainer .scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border: 20rpx;
}

.recommend .scrollContainer .scrollItem text {
    font-size: 26rpx;
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box;
    /** 对象作为伸缩盒子模型显示 **/
    -webkit-box-orient: vertical;
    /** 设置或检索伸缩盒对象的子元素的排列方式 **/
    -webkit-line-clamp: 2;
    /** 显示的行数 **/
    overflow: hidden;
    /** 隐藏超出的内容 **/
}


/* 排行榜 */

.ranking {
    padding: 0 20rpx;
}

.ranking .swiperRank {
    height: 250px;
}

.ranking .swiperRank .swiperItem {
    /* background-color: #eee; */
}

.ranking .swiperRank .swiperItem .title {
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
}

.ranking .swiperRank .swiperItem .content {
    display: flex;
    margin-bottom: 20rpx;
}

.ranking .swiperRank .swiperItem .content image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 5rpx;
}

.ranking .swiperRank .swiperItem .content .index {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.ranking .swiperRank .swiperItem .content .name {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}